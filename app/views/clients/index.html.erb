
<%=link_to 'New Student', new_client_path%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last Name</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>
  <tbody> 
    <% @clients.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.last_name %></td>
        <td><%= link_to 'View', c%></td>
        <td><%=  link_to 'Edit',edit_client_path(c)  %></td>
        <td><%=  button_to 'Delete', c,method: :delete , data:{confirm:'Are you sure?' }  %></td>
        <td><%=  link_to 'Delete', c, method: :destroy , data:{confirm:'Are you sure?' }  %></td>

      </tr>
    <% end %>
  </tbody>
</table>

